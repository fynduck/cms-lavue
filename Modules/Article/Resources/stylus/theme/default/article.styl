.masonry
  column-gap 1rem
  @media (min-width: $md)
    column-count 2
  @media (min-width: $lg)
    column-count 3
  @media (min-width: $exl)
    column-count 4

  .article
    display grid
    grid-template-rows 1fr auto
    margin-bottom 1rem
    break-inside avoid

.article
  height 100%
  position relative
  background-color $white

  figure
    overflow hidden
    position relative

    &::before
      position absolute
      top 50%
      left 50%
      z-index 2
      display block
      content ''
      width 0
      height 0
      background rgba(255, 255, 255, .2)
      border-radius 100%
      transform translate(-50%, -50%)
      opacity 0

    &:hover
      &::before
        animation: circle .75s;

  a
    color $black
    position relative
    transition color .2s ease
    text-decoration none

    &:hover
      text-decoration none
      color $black

  .info
    padding 0 1rem 1rem

    .title
      font-size 1.37rem
      font-weight bold
      color $black
      margin-bottom 1rem
      text-align center

.time_views
  color $grey
  font-size .9rem
  margin-right .3rem