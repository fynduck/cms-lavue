.masonry
  column-gap 1rem
  @media (min-width: $md)
    column-count 2
  @media (min-width: $lg)
    column-count 3
  @media (min-width: $xxl)
    column-count 4

  .article
    display grid
    grid-template-rows 1fr auto
    margin-bottom 1rem
    break-inside avoid

.article
  height 100%
  position relative
  background-color $white
  border-radius .3rem
  transition(.5s)

  &:hover
    transform translate3d(0, -2px, 5px)

  a
    color $black
    position relative
    transition color .2s ease
    text-decoration none

    &:hover
      text-decoration none
      color $black

  .info
    padding 1rem

    .title
      font-size 1.37rem
      font-weight bold
      color $black
      margin-bottom 1rem
      text-align center

.time_views
  color $grey
  font-size .9rem
  margin-right .3rem